    <script>
        // Lokasi file CSV hasil ekspor
        const csvFile = "akta_cerai_belum_diambil_2025-11-13.csv";

        // Fungsi untuk memuat dan menampilkan CSV
        async function loadCSV() {
            const response = await fetch(csvFile);
            const data = await response.text();

            const rows = data.trim().split('\n').slice(1); // Hilangkan header
            const tableBody = document.querySelector('#aktaTable tbody');
            tableBody.innerHTML = '';

            rows.forEach((row, index) => {
                const cols = row.split(',');
                const tr = document.createElement('tr');
                tr.innerHTML = `
          <td>${index + 1}</td>
          <td>${cols[0]}</td>
          <td>${cols[1]}</td>
          <td>${cols[2]}</td>
          <td>${cols[3]}</td>
          <td>${cols[4]}</td>
          <td>${cols[5]}</td>
          <td>${cols[7] || 'Belum mengambil akta cerai'}</td>
        `;
                tableBody.appendChild(tr);
            });
        }

        loadCSV();
    </script>
